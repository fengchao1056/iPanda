<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/x10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y200">
        <ImageView
            android:id="@+id/homesplendid_image"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y200" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/lpanda_bottom_gra"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y45">
            <ImageView

                android:src="@drawable/home_play_icon"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="@dimen/x20"
                android:id="@+id/tv_splendid_item"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:text="00:31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/y10"
        android:textScaleX="1"
        android:lineSpacingExtra="@dimen/y3"
        android:maxLines="2"
        android:textSize="@dimen/x20"
        android:textColor="@color/colorBack"
        android:id="@+id/homesplendid_title"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content" />

    <TextView
        android:text="2017.07.13"
        android:textSize="@dimen/x20"
        android:textColor="@color/colorBack"
        android:layout_marginTop="@dimen/y20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>