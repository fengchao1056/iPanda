<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/home_pandalive_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y120">
        <ImageView
            android:id="@+id/homepandalive_image"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y120" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/lpanda_bottom_gra"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y40">
            <ImageView
                android:src="@drawable/home_hot_live_icon"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:layout_width="@dimen/x20"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:text="Live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/y10"
        android:textScaleX="1"
        android:lineSpacingExtra="@dimen/y3"
        android:maxLines="2"
        android:textSize="@dimen/x20"
        android:textColor="@color/colorBack"
        android:id="@+id/homepandalive_title"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content" />

</LinearLayout>