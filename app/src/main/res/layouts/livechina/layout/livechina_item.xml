<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_marginBottom="@dimen/y20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/_no_img"
            android:id="@+id/liveChina_itemImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y400" />
        <ImageView
            android:id="@+id/liveChina_playBtn"
            android:layout_centerInParent="true"
            android:background="@drawable/lpanda_pause"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50" />
    </RelativeLayout>

    <TextView
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10"
        android:id="@+id/livechina_itemTitle"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/x40"
        android:textColor="@color/colorBack"
        android:text="[正在直播]八达岭"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/y10"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginBottom="@dimen/y20"
            android:text="简介"
            android:textSize="12sp"
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/isShow_content"
            android:button="@null"
            android:layout_centerInParent="true"
            android:background="@drawable/livechina_contentbtn"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
    </RelativeLayout>

    <TextView
        android:textColor="@color/colorBack"
        android:id="@+id/liveChina_itemContent"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/y5"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/y60"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x20"
        android:paddingBottom="@dimen/y40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>