<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a123.pandatv.activity.BoadCastWebMainActivity">
    <RelativeLayout
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/observer_webBack"
            android:src="@drawable/ic_chevron_left_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/pandaObserver_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <WebView
        android:layout_weight="1"
        android:id="@+id/pandaObserver_webUrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:button="@null"
            android:id="@+id/shoucang_btn"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/pandaobserver_shoucang_btnbk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:button="@null"
            android:id="@+id/fenxiang_btn"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/pandaobserver_fenxiang_btnbk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
