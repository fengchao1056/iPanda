<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlueHui"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/person_backBtn"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_chevron_left_white_36dp"
            android:layout_width="@dimen/x70"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginRight="@dimen/x70"
            android:text="个人中心"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/person_sign"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="点击登录"
            android:textColor="@color/colorBack"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/personal_enter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/person_seeHistory"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/personal_history_img"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="观看历史"
            android:textColor="@color/colorBack"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/personal_enter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/collect_layout"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/personal_shoucang_img"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="我的收藏"
            android:textColor="@color/colorBack"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/personal_enter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/personal_set_img"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="设置"
            android:textColor="@color/colorBack"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/personal_enter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>